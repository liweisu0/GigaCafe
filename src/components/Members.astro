<section id="members" class="section members">
  <div class="container">
    <h2 class="section-title">Our Members</h2>
    
    <div class="members-grid">
      {members.map(member => (
        <div class="member-card">
          <div class="member-image">
            <img src={member.image} alt={member.name} onerror="this.src='https://via.placeholder.com/150?text=Member'"/>
          </div>
          <div class="member-info">
            <h3>{member.name}</h3>
            <p>{member.role}</p>
            <a href={member.github} target="_blank" rel="noopener noreferrer" class="github-link">
